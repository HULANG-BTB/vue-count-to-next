{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es6",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "examples/*"
      ]
    },
    "lib": ["DOM", "ESNext", "DOM.Iterable", "ScriptHost"]
  },
  "include": [
    "examples/**/*.ts",
    "examples/**/*.tsx",
    "examples/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "typings/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
